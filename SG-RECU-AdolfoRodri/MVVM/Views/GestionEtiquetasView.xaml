<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SG_RECU_AdolfoRodri.MVVM.Views.GestionEtiquetasView"
             Title="GestiÃ³n de Etiquetas"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F4F4F4">

    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#000000" Background="#000000">

        <Button Text="â¬… Volver"
                Command="{Binding VolverCommand}"
                BackgroundColor="#E0E0E0"
                TextColor="Black"
                CornerRadius="10" />

        <Frame BackgroundColor="#434343" Padding="15" CornerRadius="15" HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Entry Placeholder="Nombre de la etiqueta"
                       Text="{Binding EtiquetaSeleccionada.Nombre}"
                       TextChanged="Entry_TextChangued"
                       BackgroundColor="#FAFAFA"
                       Margin="0"
                       HeightRequest="45"
                       />
                <HorizontalStackLayout Spacing="10">
                    <Button Text="ðŸ’¾ Guardar"
                            Command="{Binding GuardarEtiquetaCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="10"
                            />
                    <Button Text="ðŸ—‘ Eliminar"
                            Command="{Binding EliminarEtiquetaCommand}"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            CornerRadius="10"
                            />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <Label Text="Lista de etiquetas"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="#333"
               Margin="0,10,0,0" />

        <CollectionView ItemsSource="{Binding ListaEtiquetas}"
                        SelectionMode="Single"
                        SelectedItem="{Binding EtiquetaSeleccionada}"
                        BackgroundColor="White"
                        Margin="0"
                        HeightRequest="300">

            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="20">
                    <Label HorizontalTextAlignment="Center"
                           Text="ðŸ˜” No hay etiquetas"
                           FontSize="Medium"
                           TextColor="#888" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="5"
                           CornerRadius="10"
                           BackgroundColor="#E8EAF6"
                           HasShadow="True">
                        <Label Text="{Binding Nombre}"
                               FontSize="Medium"
                               TextColor="#3F51B5" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
